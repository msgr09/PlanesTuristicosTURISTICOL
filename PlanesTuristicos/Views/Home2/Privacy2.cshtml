
@{
    Layout = "_Layout1";
}

<!DOCTYPE html>

<head>
    <meta charset="UTF-8">
    <title>Inicio - Planes Turísticos</title>
    <style>
        body {
            background-image: url("https://www.tenjo-cundinamarca.gov.co/MiMunicipio/PublishingImages/Paginas/Sitios-de-Interes/Serrania%20el%20Majuy.jpg"); /* Establece la imagen como fondo del body */
            background-size: cover; /* Ajusta el tamaño de la imagen para cubrir todo el fondo */
            background-repeat: no-repeat; /* Evita la repetición de la imagen */
        }
    </style>
    <style>
        /* Estilos para las tarjetas de planes turísticos */
        .card {
            box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2);
            max-width: 300px;
            margin: auto;
            text-align: center;
            font-family: arial;
        }

        .title {
            color: grey;
            font-size: 18px;
        }

        /* Estilos adicionales para las imágenes */
        img {
            width: 100%;
            height: 200px;
        }
    </style>
</head>

<body>

    <h2>Inicio - Planes Turísticos</h2>

    <!-- Tarjeta de Plan Turístico 1 -->
    <div class="card">
        <img src="ruta_de_la_imagen_1.jpg" alt="Plan Turístico 1" style="width:100%">
        <h1>Plan Turístico 1</h1>
        <p class="title">Descripción del Plan Turístico 1</p>
        <p>Precio: $X</p>
        <p><button>Ver Detalles</button></p>
    </div>

    <!-- Tarjeta de Plan Turístico 2 -->
    <div class="card">
        <img src="ruta_de_la_imagen_2.jpg" alt="Plan Turístico 2" style="width:100%">
        <h1>Plan Turístico 2</h1>
        <p class="title">Descripción del Plan Turístico 2</p>
        <p>Precio: $Y</p>
        <p><button>Ver Detalles</button></p>
    </div>

    <!-- Puedes añadir más tarjetas para otros planes turísticos -->

</body>

</html>